<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>conexp-fx</groupId>
	<artifactId>conexp-fx</artifactId>
	<version>5.0-SNAPSHOT</version>
	<name>Concept Explorer FX</name>
	<packaging>pom</packaging>
	<inceptionYear>2010</inceptionYear>

	<modules>
		<module>conexp-fx-core</module>
		<module>conexp-fx-cli</module>
		<module>conexp-fx-gui</module>
	</modules>

	<organization>
		<name>TU Dresden, Chair of Automata Theory</name>
		<url>http://lat.inf.tu-dresden.de</url>
	</organization>

	<developers>
		<developer>
			<name>Francesco Kriegel</name>
			<email>francesco.kriegel@tu-dresden.de</email>
			<url>http://lat.inf.tu-dresden.de/~francesco</url>
		</developer>
	</developers>

	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<application.javaVersion>1.7</application.javaVersion>
	</properties>

	<scm>
		<developerConnection>scm:git:https://github.com/francesco-kriegel/conexp-fx.git</developerConnection>
	</scm>

	<distributionManagement>
		<repository>
			<id>goedel.artifactory.libs-release-local</id>
			<name>libs-release-local</name>
			<url>https://lat.inf.tu-dresden.de/artifactory/libs-release-local</url>
		</repository>
		<snapshotRepository>
			<id>goedel.artifactory.libs-snapshot-local</id>
			<name>libs-snapshot-local</name>
			<url>https://lat.inf.tu-dresden.de/artifactory/libs-snapshot-local</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<pluginManagement>
			<plugins>
				<!-- <plugin> -->
				<!-- <groupId>org.eclipse.m2e</groupId> -->
				<!-- <artifactId>lifecycle-mapping</artifactId> -->
				<!-- <version>1.0.0</version> -->
				<!-- <configuration> -->
				<!-- <lifecycleMappingMetadata> -->
				<!-- <pluginExecutions> -->
				<!-- <pluginExecution> -->
				<!-- <pluginExecutionFilter> -->
				<!-- <groupId> -->
				<!-- org.apache.maven.plugins -->
